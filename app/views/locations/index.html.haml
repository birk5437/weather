- if flash[:error]
  .error
    %span= flash[:error]
%h1 Current Local Weather!
%h3 Enter a U.S. Zip Code

-form_for :search, :url => location_search_url do |f|
  =f.text_field :term

- if @location.present?
  %h2= @location.to_s
  = #link_to 'Show', @location
  = #link_to 'Edit', edit_location_path(@location)
  = #link_to 'Destroy', @location, :confirm => 'Are you sure?', :method => :delete

= #link_to 'New location', new_location_path
