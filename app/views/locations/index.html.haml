- if flash[:error]
  .error
    %span= flash[:error]
%h1 Current Local Weather!
%h3 Enter a U.S. Zip Code

-form_for :search, :url => location_search_url do |f|
  =f.text_field :term

- popular_locations = Location.popular_locations
- if popular_locations.count > 1
  %br
  %h4 Top Locations
  %ol
    - popular_locations.each do |location|
      %li= link_to "#{location.to_s} #{location.zip}", location_url(location)


= #link_to 'New location', new_location_path
